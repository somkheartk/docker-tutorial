# UAT Environment Variables
NODE_ENV=staging
PORT=3000
LOG_LEVEL=info
ENVIRONMENT=uat

# Database (use AWS Secrets Manager in real deployment)
DATABASE_HOST=postgres-uat
DATABASE_PORT=5432
DATABASE_NAME=myapp_uat
DATABASE_USER=uatuser
# DATABASE_PASSWORD - stored in AWS Secrets Manager

# Redis
REDIS_HOST=redis-uat
REDIS_PORT=6379
# REDIS_PASSWORD - stored in AWS Secrets Manager

# API Keys (use AWS Secrets Manager)
# API_KEY - stored in AWS Secrets Manager

# JWT
# JWT_SECRET - stored in AWS Secrets Manager

# Features
ENABLE_DEBUG=false
ENABLE_METRICS=true
ENABLE_TRACING=false

# SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
# SMTP_USER - stored in AWS Secrets Manager
# SMTP_PASSWORD - stored in AWS Secrets Manager
