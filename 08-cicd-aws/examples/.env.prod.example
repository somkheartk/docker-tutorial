# Production Environment Variables
# IMPORTANT: This is an example file. Real production values should be stored in AWS Secrets Manager
NODE_ENV=production
PORT=3000
LOG_LEVEL=warn
ENVIRONMENT=prod

# Database (use AWS Secrets Manager)
DATABASE_HOST=postgres-prod
DATABASE_PORT=5432
DATABASE_NAME=myapp_prod
DATABASE_USER=produser
# DATABASE_PASSWORD - MUST be stored in AWS Secrets Manager

# Redis (use AWS Secrets Manager)
REDIS_HOST=redis-prod
REDIS_PORT=6379
# REDIS_PASSWORD - MUST be stored in AWS Secrets Manager

# API Keys (use AWS Secrets Manager)
# API_KEY - MUST be stored in AWS Secrets Manager

# JWT (use AWS Secrets Manager)
# JWT_SECRET - MUST be stored in AWS Secrets Manager

# Features
ENABLE_DEBUG=false
ENABLE_METRICS=true
ENABLE_TRACING=true

# SMTP (use AWS Secrets Manager)
SMTP_HOST=smtp.production.com
SMTP_PORT=587
# SMTP_USER - MUST be stored in AWS Secrets Manager
# SMTP_PASSWORD - MUST be stored in AWS Secrets Manager

# Monitoring
# GRAFANA_PASSWORD - MUST be stored in AWS Secrets Manager

# AWS
AWS_REGION=us-east-1

# Application
APP_NAME=myapp
APP_VERSION=1.0.0
